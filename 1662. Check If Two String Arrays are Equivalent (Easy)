class Solution {
    public boolean arrayStringsAreEqual(String[] word1, String[] word2) {
        String firstWord = "";
        String secondWord = "";
        
        for(int i = 0; i < word1.length; i++){
            firstWord+= word1[i];
        }
        for(int k = 0; k < word2.length; k++){
            secondWord+= word2[k];
        }
        if(firstWord.equals(secondWord))
            return true;
        else
            return false;
    }
}
